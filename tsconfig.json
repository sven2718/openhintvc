{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES2020",
        "outDir": "out",
        "lib": [
            "ES2020"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "types": ["node", "vscode"],
        /* Strict Type-Checking Option */
        "strict": false,
        /* Additional Checks */
        "skipLibCheck": true,
        "noUnusedLocals": false
        // "noImplicitReturns": true,
        // "noFallthroughCasesInSwitch": true,
        // "noUnusedParameters": true,
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        "src/test"
    ]
}
